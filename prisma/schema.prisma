datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id            Int           @id @default(autoincrement())
  type          StudentType
  name          String
  dob           DateTime?     @db.Timestamptz(3)
  phone         String?
  guardian      String?
  coaches       Coach[]
  classes       Class[]
}

model Coach {
  id            Int           @id @default(autoincrement())
  name          String
  payRate       Int?
  students      Student[]
  classes       Class[]
}

model Class {
  id            Int           @id @default(autoincrement())
  type          ClassType
  startTime     DateTime
  endTime       DateTime
  coachId       Int
  coach         Coach         @relation(fields: [coachId], references: [id])
  students      Student[]
  locationId    Int   
  location      Location      @relation(fields: [locationId], references: [id])
  courtId       Int           
  note          String?
  isBreak       Boolean       @default(false)
}

model Location {
  id            Int           @id @default(autoincrement())
  key           String        @unique
  name          String
  courtCount    Int
  classes       Class[]
}

enum StudentType {
  YOUNG
  ADULT
  TRAINING
}

enum ClassType {
  YOUNG_PRIVATE
  YOUNG_GROUP
  ADULT_PRIVATE
  ADULT_GROUP
  TRAINING
}
